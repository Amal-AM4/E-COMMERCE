<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Products | MiniKart</title>
    <link rel="stylesheet" href="/stylesheets/home/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .bi-box-arrow-right {
            font-size: 24px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <a href="/"><img src="images/logo.png" alt="logo" width="125px"></a>
            </div>
            <nav>
                <ul id="MenuItems">
                    <li><a href="/">Home</a></li>
                    <li><a href="/products?skip=0&take=8">Products</a></li>
                    <% if (active === true) { %>
                        <li><a href="/users/dashboard"><%= userTbl.name %></a></li>
                        <li><a href="/users/logout"><i class="bi bi-box-arrow-right"></i></a></li>
                    <% } else { %>
                        <li><a href="/users/login">Login</a></li>
                    <% } %>
                </ul>
            </nav>
            <% if (active === true) { %>
                <a href="/cart"><img src="images/cart.png" width="30px" height="30px"></a>
            <% } %>
            <img src="images/menu.png" class="menu-icon" onclick="menutoggle()">
        </div>
    </div>

    <!-- All Products -->

    <div class="small-container">
        <div class="row row-2">
            <h2>All Products</h2>
        </div>
        <div class="row">
            
            <% result.forEach(col => { %>
                <div class="col-4">
                    <a href="/product_details/<%= col.pid %>"><img src="<%= col.thumb_img.replace('public', '') %>"></a>
                    <h4><%= col.name %></h4>
                    <h5><%= col.category.name %></h5>
                    <p>&#8377; <%= col.dicount_price %>.00</p>
                </div>
            <% }) %>

        </div>

        <div class="page-btn">
            <a href="/products?skip=0&take=8"><span>1</span></a>
            <a href="/products?skip=8&take=8"><span>2</span></a>
            <a href="/products?skip=16&take=8"><span>3</span></a>
            <a href="/products?skip=24&take=8"><span>4</span></a>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col-1">
                    <h3>Download Our App</h3>
                    <p>Download App for Android and ios mobile phone.</p>
                    <div class="app-logo">
                        <img src="images/play-store.png">
                        <img src="images/app-store.png">
                    </div>
                </div>
                <div class="footer-col-2">
                    <img src="images/logo-white.png">
                    <p>Our Purpose Is To Sustainably Make the Pleasure and Benefits of Sports Accessible to the Many.
                    </p>
                </div>
                <div class="footer-col-3">
                    <h3>Useful Links</h3>
                    <ul>
                        <li>Coupons</li>
                        <li>Blog Post</li>
                        <li>Return Policy</li>
                        <li>Join Affiliate</li>
                    </ul>
                </div>
                <div class="footer-col-4">
                    <h3>Follow Us</h3>
                    <ul>
                        <li>Facebook</li>
                        <li>Twitter</li>
                        <li>Instagram</li>
                        <li>Youtube</li>
                    </ul>
                </div>
            </div>
            <hr>
            <p class="copyright">Copyright 2020 - Samwit Adhikary</p>
        </div>
    </div>

    <!-- javascript -->

    <script>
        var MenuItems = document.getElementById("MenuItems");
        MenuItems.style.maxHeight = "0px";
        function menutoggle() {
            if (MenuItems.style.maxHeight == "0px") {
                MenuItems.style.maxHeight = "200px"
            }
            else {
                MenuItems.style.maxHeight = "0px"
            }
        }
    </script>

</body>

</html>